<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OutOfTheBox.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OutOfTheBox"
    xmlns:pages="clr-namespace:OutOfTheBox.Pages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="{StaticResource Primary}"
    Shell.TabBarForegroundColor ="White"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="AliceBlue"
    Title="OutOfTheBox">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior  StatusBarColor="{StaticResource Primary}" StatusBarStyle="LightContent"/>
    </Shell.Behaviors>
    
    
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />


    <TabBar>
        <ShellContent
       Title="Home"
       ContentTemplate="{DataTemplate pages:MainPage}"
            Icon="home.png"
       Route="MainPage" />

        <ShellContent
        Title="Trips"
        ContentTemplate="{DataTemplate pages:TripsPage}"
            Icon="directions.png"
        Route="TripsPage" />

        <ShellContent
        Title="Add Trips"
        ContentTemplate="{DataTemplate pages:MainPage}"
            Icon="plus.png"
        Route="MainPage2" />
        <ShellContent
       Title="Setting"
       ContentTemplate="{DataTemplate pages:MainPage}"
            Icon="gear.png"
       Route="MainPage3" />
    </TabBar>
    
</Shell>
